@using Simple_HMS.Entity;
@model MedRecords

@{
    ViewBag.Title = "Add Medical Record";
    Patients patient = (Patients)ViewBag.patients;
}

<h2>Add Medical Record</h2>

<div>
    <h4>Patients</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Patients Regno")
        </dt>

        <dd>
            @patient.patients_regno
        </dd>

        <dt>
            @Html.DisplayName("First Name")
        </dt>

        <dd>
            @patient.first_name
        </dd>

        <dt>
            @Html.DisplayName("Last Name")
        </dt>

        <dd>
            @patient.last_name
        </dd>

        <dt>
            @Html.DisplayName("Date of Birth")
        </dt>

        <dd>
            @patient.dob.ToLongDateString()
        </dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>MedRecords</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.patients_regno, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="patients_regno" id="patients_regno" value="@Model.patients_regno" readonly class="form-control" />
                <input name="patients_regno" id="patients_regno" value="@Model.patients_regno" type="hidden" />
                @*@Html.EditorFor(model => model.patients_regno, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.patients_regno, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.amount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control" name="amount" id="amount" type="number" required />
                @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.treatment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.treatment, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.treatment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

    <div>
        @Html.ActionLink("Patient Profile", "patients", new { regno = Model.patients_regno }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Back to Desk", "Index")
    </div>
